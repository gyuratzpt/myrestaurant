<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerview_item_layout_v3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp">

    <TextView
        android:id="@+id/invisible_height_setter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintDimensionRatio="H,1:1"
        />








    <ImageView
        android:id="@+id/recyclerview_item_layout_v3_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="aktuális tétel képe"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recyclerview_item_layout_v3_name"
        app:layout_constraintTop_toTopOf="@id/invisible_height_setter"
        app:layout_constraintBottom_toBottomOf="@id/invisible_height_setter"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/recyclerview_item_layout_v3_name"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toEndOf="@id/recyclerview_item_layout_v3_image"
        app:layout_constraintEnd_toStartOf="@id/recyclerview_item_layout_v3_dec"
        app:layout_constraintTop_toTopOf="@id/invisible_height_setter"
        app:layout_constraintBottom_toTopOf="@id/recyclerview_item_layout_v3_description"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.3"
        />

    <TextView
        android:id="@+id/recyclerview_item_layout_v3_description"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintLeft_toLeftOf="@id/recyclerview_item_layout_v3_name"
        app:layout_constraintRight_toRightOf="@id/recyclerview_item_layout_v3_name"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_item_layout_v3_name"
        app:layout_constraintBottom_toBottomOf="@id/invisible_height_setter"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintHeight_percent="0.7"
        />









    <TextView
        android:id="@+id/recyclerview_item_layout_v3_inc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:gravity="center"
        android:background="#88BB66"

        app:layout_constraintTop_toTopOf="@id/invisible_height_setter"
        app:layout_constraintBottom_toTopOf="@id/recyclerview_item_layout_v3_amount"
        app:layout_constraintLeft_toLeftOf="@id/recyclerview_item_layout_v3_amount"
        app:layout_constraintRight_toRightOf="@id/recyclerview_item_layout_v3_amount"

        app:layout_constraintHeight_percent="0.4"
        />

    <TextView
        android:id="@+id/recyclerview_item_layout_v3_amount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="#DDDDDD"

        app:layout_constraintStart_toEndOf="@id/recyclerview_item_layout_v3_dec"
        app:layout_constraintEnd_toStartOf="@id/recyclerview_item_layout_v3_inc"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_item_layout_v3_inc"
        app:layout_constraintBottom_toTopOf="@id/recyclerview_item_layout_v3_dec"
        app:layout_constraintLeft_toRightOf="@id/recyclerview_item_layout_v3_description"
        app:layout_constraintRight_toLeftOf="@id/recyclerview_item_layout_v3_price"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.15"
        app:layout_constraintHeight_percent="0.2"
        />

    <TextView
        android:id="@+id/recyclerview_item_layout_v3_dec"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:gravity="center"
        android:background="#BB3322"

        app:layout_constraintTop_toBottomOf="@id/recyclerview_item_layout_v3_amount"
        app:layout_constraintBottom_toBottomOf="@id/invisible_height_setter"
        app:layout_constraintLeft_toLeftOf="@id/recyclerview_item_layout_v3_amount"
        app:layout_constraintRight_toRightOf="@id/recyclerview_item_layout_v3_amount"

        app:layout_constraintHeight_percent="0.4"
        />









    <TextView
        android:id="@+id/recyclerview_item_layout_v3_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"

        app:layout_constraintStart_toEndOf="@id/recyclerview_item_layout_v3_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/invisible_height_setter"
        app:layout_constraintBottom_toBottomOf="@id/invisible_height_setter"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.15"
        />

    <TextView
        android:id="@+id/recyclerview_item_layout_v3_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="X"
        android:gravity="center"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    tools:context=".AdminActivity">


    <TextView
        android:id="@+id/admin_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin page"
        android:textSize="30sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/admin_button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/admin_button_change"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="20dp"

        app:layout_constraintBaseline_toBaselineOf="@id/admin_button_change"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/admin_button_change"

 />



    <Button
        android:id="@+id/admin_button_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change"
        android:gravity="center"

        app:layout_constraintStart_toEndOf="@id/admin_button_add"
        app:layout_constraintEnd_toStartOf="@id/admin_button_delete"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toBottomOf="@id/admin_title"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/admin_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"

        app:layout_constraintStart_toEndOf="@id/admin_button_change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="20dp"

        app:layout_constraintBaseline_toBaselineOf="@id/admin_button_change"
        app:layout_constraintLeft_toRightOf="@id/admin_button_change"
        app:layout_constraintRight_toRightOf="parent"

    />

    <TextView
        android:id="@+id/admin_textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Név"

        app:layout_constraintLeft_toLeftOf="@id/admin_button_add"
        app:layout_constraintTop_toBottomOf="@id/admin_button_add"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:id="@+id/admin_edittextName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Név ide"


        app:layout_constraintLeft_toRightOf="@id/admin_textDescription"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/admin_textName"
        android:layout_marginRight="10dp"
        />




    <TextView
        android:id="@+id/admin_textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leírás"

        app:layout_constraintLeft_toLeftOf="@id/admin_button_add"
        app:layout_constraintTop_toBottomOf="@id/admin_textName"
        android:layout_marginTop="60dp"
        />

    <EditText
        android:id="@+id/admin_edittextDescription"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"

        app:layout_constraintLeft_toRightOf="@id/admin_textDescription"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/admin_textDescription"
        android:layout_marginRight="10dp"

        app:layout_constraintBottom_toTopOf="@id/admin_textPrice"
        android:layout_marginBottom="20dp"
        />




    <TextView
        android:id="@+id/admin_textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ár"

        app:layout_constraintLeft_toLeftOf="@id/admin_button_add"
        app:layout_constraintTop_toBottomOf="@id/admin_textDescription"
        android:layout_marginTop="120dp" />

    <EditText
        android:id="@+id/admin_edittextPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ár ide"

        app:layout_constraintLeft_toRightOf="@id/admin_textDescription"
        android:layout_marginLeft="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/admin_textPrice"
        android:layout_marginRight="10dp"
        />

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_listitem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <TextView
        android:id="@+id/invisible_height_setter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="1"
        />






    <ImageView
        android:id="@+id/menu_listitem_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingRight="5dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/menu_listitem_description"
        app:layout_constraintTop_toTopOf="@id/invisible_height_setter"
        app:layout_constraintBottom_toBottomOf="@id/invisible_height_setter"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.25" />




    <TextView
        android:id="@+id/menu_listitem_name"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="@id/invisible_height_setter"
        app:layout_constraintBottom_toTopOf="@id/menu_listitem_description"
        app:layout_constraintLeft_toLeftOf="@id/menu_listitem_description"
        app:layout_constraintRight_toLeftOf="@id/menu_listitem_price"

        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintWidth_percent="0.35"
        />

    <TextView
        android:id="@+id/menu_listitem_price"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="right"

        app:layout_constraintTop_toTopOf="@id/invisible_height_setter"
        app:layout_constraintBottom_toTopOf="@id/menu_listitem_description"
        app:layout_constraintLeft_toRightOf="@id/menu_listitem_name"
        app:layout_constraintRight_toRightOf="@id/menu_listitem_description"


        />

    <TextView
        android:id="@+id/menu_listitem_description"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintStart_toEndOf="@id/menu_listitem_image"
        app:layout_constraintEnd_toStartOf="@id/menu_listitem_amount"

        app:layout_constraintLeft_toRightOf="@id/menu_listitem_image"
        app:layout_constraintRight_toLeftOf="@id/menu_listitem_amount"
        app:layout_constraintTop_toBottomOf="@id/menu_listitem_name"
        app:layout_constraintBottom_toBottomOf="@id/invisible_height_setter"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHeight_percent="0.7"
        />









    <TextView
        android:id="@+id/menu_listitem_dec"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="#FF0000"
        android:textSize="32sp"
        android:text="-"

        app:layout_constraintTop_toTopOf="@id/invisible_height_setter"
        app:layout_constraintBottom_toTopOf="@id/menu_listitem_amount"
        app:layout_constraintLeft_toLeftOf="@id/menu_listitem_amount"
        app:layout_constraintRight_toLeftOf="@id/menu_listitem_inc"
        />



    <TextView
        android:id="@+id/menu_listitem_inc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="#00FF00"
        android:textSize="32sp"
        android:text="+"

        app:layout_constraintTop_toTopOf="@id/invisible_height_setter"
        app:layout_constraintBottom_toTopOf="@id/menu_listitem_amount"
        app:layout_constraintLeft_toRightOf="@id/menu_listitem_dec"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/menu_listitem_amount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"

        app:layout_constraintStart_toEndOf="@id/menu_listitem_description"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintBottom_toBottomOf="@id/invisible_height_setter"
        app:layout_constraintLeft_toRightOf="@id/menu_listitem_dec"
        app:layout_constraintRight_toLeftOf="@id/menu_listitem_inc"

        app:layout_constraintHeight_percent="0.4"
        />
    
</android.support.constraint.ConstraintLayout>

